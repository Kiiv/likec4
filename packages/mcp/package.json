{
  "name": "@likec4/mcp",
  "license": "MIT",
  "version": "1.28.1",
  "bugs": "https://github.com/likec4/likec4/issues",
  "homepage": "https://likec4.dev",
  "author": "Denis Davydkov <denis@davydkov.com>",
  "type": "module",
  "bin": {
    "likec4-mcp-server": "dist/index.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/likec4/likec4.git",
    "directory": "packages/mcp"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "keywords": [
    "likec4",
    "mcp",
    "model context protocol",
    "server"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "wireit",
    "inspector": "wireit"
  },
  "wireit": {
    "build": {
      "command": "unbuild",
      "files": [
        "src/**/*"
      ]
    },
    "inspector": {
      "dependencies": [
        "build"
      ],
      "command": "pnpx @modelcontextprotocol/inspector node dist/index.mjs",
      "env": {
        "LIKEC4_WORKSPACE": "../../examples/"
      },
      "service": {
        "readyWhen": {
          "lineMatches": "MCP Inspector is up"
        }
      }
    }
  },
  "dependencies": {
    "likec4": "workspace:*"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "catalog:mcp",
    "package-manager-detector": "catalog:utils",
    "@likec4/language-server": "workspace:*",
    "@likec4/log": "workspace:*",
    "@likec4/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "esm-env": "catalog:utils",
    "fast-equals": "catalog:utils",
    "fdir": "catalog:utils",
    "langium": "catalog:langium",
    "nano-spawn": "^0.2.0",
    "pretty-ms": "^9.2.0",
    "remeda": "catalog:utils",
    "strip-indent": "^4.0.0",
    "tsx": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:",
    "ufo": "catalog:utils",
    "unbuild": "catalog:",
    "vitest": "catalog:vitest",
    "zod": "catalog:utils",
    "vscode-jsonrpc": "catalog:vscode",
    "vscode-languageserver": "catalog:vscode",
    "vscode-languageserver-types": "catalog:vscode",
    "vscode-uri": "catalog:vscode",
    "wireit": "catalog:"
  },
  "packageManager": "pnpm@10.8.0"
}
